generator client {
  provider = "prisma-client"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
}

model UserLogin {
  id         Int        @id @default(autoincrement())
  name       String
  email      String     @unique
  password   String
  categories Category[]
}

model Category {
  id        Int       @id @default(autoincrement())
  name      String
  userId    Int
  UserLogin UserLogin @relation(fields: [userId], references: [id])
}
